---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import HeroImage from '../components/HeroImage.astro';
import SongkickWidget from '../components/SongkickWidget.astro';
import SectionHeading from '../components/SectionHeading.astro';
import ExternalLinks from '../components/ExternalLinks.astro';
import HeroWrapper from '../components/HeroWrapper.astro';
import HeroLogo from '../components/HeroLogo.astro';
import Section from '../components/Section.astro';
import SectionWrapper from '../components/SectionWrapper.astro';
import HeroHeading from '../components/HeroHeading.astro';
import SignUp from '../components/SignUp.astro';
---

<Layout>
  <Section id="home">
    <HeroWrapper>
      <HeroHeading>Young Gun Silver Fox</HeroHeading>
      <HeroImage />
      <HeroLogo />
    </HeroWrapper>
    <ExternalLinks />
  </Section>
  <Section id="tour-dates">
    <SectionWrapper>
      <SectionHeading>All Tour Dates</SectionHeading>
      <SongkickWidget />
    </SectionWrapper>
  </Section>
  <Section id="subscribe">
    <SectionWrapper>
      <SectionHeading>Subscribe</SectionHeading>
      <SignUp />
    </SectionWrapper>
  </Section>
</Layout>
