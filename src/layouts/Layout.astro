    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=1819927092177976&ev=PageView&noscript=1"
      /></noscript
    >
    <noscript>
      <img
        height="1"
        width="1"
        src="https://www.facebook.com/tr?id=974263869333378&ev=PageView
      &noscript=1"
      />
    </noscript>
  </head>
  <body class="bg-background p-2 md:p-3">
    <main class="relative">
      <slot />
    </main>
    <Footer />
    <style is:global>
      html {
        font-family: Helvetica, Arial, system-ui, sans-serif;
      }
    </style>
  </body>
</html>
