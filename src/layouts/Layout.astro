<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Young Gun Silver Fox</title>
    <meta
      name="description"
      content="UK based British/American West Coast Yacht Rock duo"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <Fragment set:html={link} />
    <link
      rel="preload"
      href="chicle-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="chicle-latin-ext-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      href="//cdn-images.mailchimp.com/embedcode/classic-061523.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="//cdn-images.mailchimp.com/embedcode/classic-061523.css"
      rel="stylesheet"
      type="text/css"
    />
    <style is:global>
      #mc_embed_signup {
        clear: left;
        font: inherit;
        width: 100%;
        max-width: 600px;
        margin: auto;
      }

      #mc_embed_signup p {
        margin: 8px 0;
      }

      #mc-embedded-subscribe-form input[type='checkbox'] {
        display: inline;
        width: auto;
        margin-right: 10px;
      }

      #mergeRow-gdpr {
        margin-top: 20px;
      }

      #mergeRow-gdpr fieldset label {
        font-weight: normal;
      }

      #mc-embedded-subscribe-form .mc_fieldset {
        border: none;
        min-height: 0px;
        padding-bottom: 0px;
      }
    </style>
    <script>
