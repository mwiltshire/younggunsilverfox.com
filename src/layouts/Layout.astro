---
import { renderImg } from '../../node_modules/astro-imagetools/api';
import Footer from '../components/Footer.astro';
import '../styles/font.css';

const { link } = await renderImg({
  src: '/public/ygsf.jpeg',
  alt: 'Young Gun Silver Fox',
  quality: 50,
  preload: 'jpeg'
});
---

