import Footer from '../components/Footer.astro';
import '../styles/font.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Young Gun Silver Fox</title>
    <meta
      name="description"
      content="UK based British/American West Coast Yacht Rock duo"
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="preload"
      href="chicle-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
